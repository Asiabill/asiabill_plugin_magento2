<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config/etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="asiabillpayment" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Asiabill Payment</label>
                <comment>Accept online payments using Asiabill, the platform of choice of forward-thinking businesses around the world.</comment>
                <include path="Asiabill_Payment::system/basic.xml"/>
                <include path="Asiabill_Payment::system/card.xml"/>
                <include path="Asiabill_Payment::system/wallets.xml"/>
                <include path="Asiabill_Payment::system/local.xml"/>
            </group>
        </section>
    </system>
</config>